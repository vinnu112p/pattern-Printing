

#include <stdio.h>

int main()
{
   int row;
   
   scanf("%d",&row);
   
   for(int i = 1; i <= row; i++){
       for(int j = row-i+1; j>= 1; j--){
          printf(" ");
       }
       
       for(int k = 1 ; k <= i; k++){
           printf("*");
       }
       for(int h = 1; h < i; h++){
           printf("*");
       }
       
       printf("\n");
   }

    return 0;
}
